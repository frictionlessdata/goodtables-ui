{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "outDir": "lib",
    "target":"ES2019",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "jsx": "react"
  }
}
