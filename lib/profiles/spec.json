{
    "title": "Goodtables Spec",
    "description": "The validation spec used by goodtables.",
    "definitions": {},
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$id": "http://example.com/example.json",
    "type": "object",
    "required": [
        "version",
        "errors"
    ],
    "properties": {
        "version": {
            "type": "string",
            "title": "Version"
        },
        "errors": {
            "type": "object",
            "title": "Errors",
            "patternProperties": {
                "^[a-zA-Z0-9-]*$": {
                    "required": [
                        "name",
                        "type",
                        "context",
                        "weight",
                        "message",
                        "description"
                    ],
                    "properties": {
                        "name": {
                            "type": "string",
                            "title": "Name"
                        },
                        "type": {
                            "type": "string",
                            "title": "Type"
                        },
                        "context": {
                            "type": "string",
                            "title": "Context"
                        },
                        "weight": {
                            "type": "integer",
                            "title": "Weight"
                        },
                        "message": {
                            "type": "string",
                            "title": "Message"
                        },
                        "description": {
                            "type": "string",
                            "title": "Description"
                        },
                        "labelStyles": {
                            "type": "object",
                            "title": "CSS for labels"
                        },
                        "tableStyles": {
                            "type": "object",
                            "title": "CSS for tables"
                        }
                    }
                }
            }
        }
    }
}
